---
helmDefaults:
  wait: true
  waitForJobs: true
  timeout: 600
  force: true
  reuseValues: true

repositories:
  - name: jetstack
    url: https://charts.jetstack.io

environments:
  default:
    secrets:
      - values.sops.yaml

releases:
  - name: cert-manager
    namespace: cert-manager
    chart: jetstack/cert-manager
    version: 1.15.0
    values:
      - values.yaml
