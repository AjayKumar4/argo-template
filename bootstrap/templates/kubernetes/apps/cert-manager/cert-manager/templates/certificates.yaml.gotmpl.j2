---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ .Values.name }}
  namespace: cert-manager
spec:
  secretName: {{ .Values.secert_name }}
  issuerRef:
    name: {{ .Values.issuer_name }}
    kind: ClusterIssuer
  commonName: {{ .Values.domain }}
  dnsNames:
    - {{ .Values.domain }}
    - "*.{{ .Values.domain }}"

