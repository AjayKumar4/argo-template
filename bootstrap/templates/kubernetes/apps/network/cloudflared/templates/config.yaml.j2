---
apiVersion: v1
kind: ConfigMap
metadata:
  name: cloudflared-configmap
  namespace: network
data:
  config.yaml: |
    ---
    originRequest:
      originServerName: {{ .Values.ingress_domain }}

    ingress:
      - hostname: {{ .Values.domain }}
        service: https://ingress-nginx-external-controller.network.svc.cluster.local:443
      - hostname: *.{{ .Values.domain }}
        service: https://ingress-nginx-external-controller.network.svc.cluster.local:443
      - service: http_status:404

