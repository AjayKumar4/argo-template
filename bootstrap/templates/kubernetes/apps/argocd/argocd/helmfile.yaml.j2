---
helmDefaults:
  wait: true
  waitForJobs: true
  timeout: 600
  force: true
  reuseValues: true

environments:
  default:
    secrets:
      - values.sops.yaml

releases:
  - name: argocd
    namespace: argocd
    chart: oci://ghcr.io/argoproj/argo-helm/argo-cd
    version: 7.1.3
    values:
      - values.yaml.gotmpl
    secrets:
      - values.sops.yaml

helmfiles:
  - path: ../../cert-manager/cert-manager/helmfile.yaml
