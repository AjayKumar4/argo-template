---
helmDefaults:
  wait: true
  waitForJobs: true
  timeout: 600
  force: true
  reuseValues: true

environments:
  default:
    secrets:
      - values.sops.yaml

repositories:
  - name: cilium
    url: https://helm.cilium.io


releases:
  - name: cilium
    namespace: kube-system
    chart: cilium/cilium
    version: 1.15.6
    values:
      - values.yaml.gotmpl
    secrets:
      - values.sops.yaml
  - name: cilium-policy
    namespace: kube-system
    chart: .
    version: 1.0.0
    secrets:
      - values.sops.yaml
    needs:
      - kube-system/cilium
