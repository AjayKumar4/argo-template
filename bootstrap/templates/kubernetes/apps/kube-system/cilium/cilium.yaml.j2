apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: cilium
  namespace: argocd
spec:
  destination:
    namespace: kube-system
    server: https://kubernetes.default.svc
  project: home-kubernetes
  source:
    chart: cilium
    repoURL: https://helm.cilium.io
    targetRevision: 1.15.6
    helm:
      valueFiles:
        - values.yaml
        - secrets://values.sops.yaml
  syncPolicy:
    automated:
      allowEmpty: true
      prune: true
      selfHeal: true

